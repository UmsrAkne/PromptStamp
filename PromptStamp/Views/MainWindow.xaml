<Window
    x:Class="PromptStamp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:PromptStamp.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PromptStamp.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:PromptStamp.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    d:DesignHeight="480"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#F5F6F8"
    FontSize="{StaticResource CommonFontSize}"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="S"
            Command="{Binding ApplyDiffAllCommand}"
            Modifiers="Control+Shift" />

        <KeyBinding
            Key="Y"
            Command="{Binding OpenAppStateWithYamlCommand}"
            Modifiers="Control+Shift" />

        <KeyBinding
            Key="C"
            Command="{Binding SpellCheckCommand}"
            Modifiers="Control+Shift+Alt" />
    </Window.InputBindings>

    <Window.Resources>

        <Thickness x:Key="SectionMargin">0,0,0,12</Thickness>

        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="{StaticResource SectionMargin}" />
        </Style>

        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
        </Style>
    </Window.Resources>

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
                <i:Interaction.Behaviors>
                    <behaviors:PngMetadataDropBehavior />
                </i:Interaction.Behaviors>

                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <Border Style="{StaticResource SectionBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="Common Prompt" />

                                        <Border
                                            Padding="2,0"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="5">

                                            <TextBox
                                                MaxHeight="150"
                                                AcceptsReturn="True"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Text="{Binding CommonPrompt}"
                                                TextWrapping="Wrap"
                                                VerticalScrollBarVisibility="Auto">
                                                <i:Interaction.Behaviors>
                                                    <behaviors:EmphasisSyntaxBehavior />
                                                </i:Interaction.Behaviors>
                                            </TextBox>

                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CommonPrompt}" Value="">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Border Background="#20AAAAAA" CornerRadius="4">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="0.6">
                                                <TextBlock Text="No Prompt" />
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="10"
                                                    Text="Drop PNG here" />
                                            </StackPanel>
                                        </Border>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <GridSplitter
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="DimGray" />

            <Expander
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,8,0,0"
                FontWeight="SemiBold"
                IsExpanded="True">
                <Expander.Header>
                    <TextBlock Margin="3" Text="Diff Prompt" />
                </Expander.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="KeyWord: " />

                        <Border
                            Margin="5,0"
                            Padding="2,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBox
                                Width="250"
                                Background="Transparent"
                                BorderThickness="0"
                                Text="{Binding PendingDiffPrompt.Key}" />
                        </Border>

                    </StackPanel>

                    <Border
                        Margin="5,4"
                        Padding="2,0"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBox
                            Height="120"
                            AcceptsReturn="True"
                            BorderThickness="0"
                            Text="{Binding PendingDiffPrompt.Prompt}">
                            <i:Interaction.Behaviors>
                                <behaviors:EmphasisSyntaxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                    </Border>
                    <Button
                        Width="240"
                        Height="25"
                        HorizontalAlignment="Right"
                        Command="{Binding AddDiffPromptAllCommand}"
                        Content="Apply DiffPrompt to All Groups" />
                </StackPanel>
            </Expander>

            <ContentControl Grid.Row="3" Grid.Column="0">
                <i:Interaction.Behaviors>
                    <behaviors:DragDropPngToImagePromptGroupsBehavior />
                </i:Interaction.Behaviors>

                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <!-- 通常 -->
                        <Setter Property="Content">
                            <Setter.Value>
                                <ListBox
                                    x:Name="ImagePromptGroupList"
                                    Width="400"
                                    Margin="6"
                                    Padding="4"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding PromptGroupListViewModel.Items}"
                                    SelectedItem="{Binding PromptGroupListViewModel.SelectedItem}"
                                    VirtualizingPanel.ScrollUnit="Pixel">
                                    <ListBox.Template>
                                        <ControlTemplate TargetType="ListBox">
                                            <Border
                                                Padding="4"
                                                Background="White"
                                                BorderBrush="#CCC"
                                                BorderThickness="1"
                                                CornerRadius="6">

                                                <ScrollViewer Padding="4">
                                                    <ItemsPresenter />
                                                </ScrollViewer>

                                            </Border>
                                        </ControlTemplate>
                                    </ListBox.Template>

                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">

                                            <!-- 共通 -->
                                            <Setter Property="Margin" Value="0,2" />
                                            <Setter Property="Padding" Value="6" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="#DDD" />
                                            <Setter Property="Background" Value="#F8F8F8" />
                                            <!-- 非選択時の地味カラー -->
                                            <Setter Property="SnapsToDevicePixels" Value="True" />

                                            <!-- マウスオーバーの視覚変化は設定しない -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border
                                                            x:Name="Bd"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4">

                                                            <ContentPresenter Margin="4" VerticalAlignment="Center" />
                                                        </Border>

                                                        <ControlTemplate.Triggers>

                                                            <!-- 選択時の見た目 -->
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#CCE4FF" />
                                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#66A9FF" />
                                                            </Trigger>

                                                            <!-- 非選択時の見た目（地味カラー） -->
                                                            <Trigger Property="IsSelected" Value="False">
                                                                <Setter TargetName="Bd" Property="Background" Value="#F8F8F8" />
                                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#DDD" />
                                                            </Trigger>

                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ImagePromptGroup}">
                                            <DataTemplate.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
                                                </Style>
                                            </DataTemplate.Resources>

                                            <StackPanel Height="120">
                                                <i:Interaction.Behaviors>
                                                    <behaviors:AddImageToGroupBehavior />
                                                </i:Interaction.Behaviors>

                                                <TextBlock
                                                    Margin="0,4"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding Header}" />

                                                <ItemsControl ItemsSource="{Binding ImagePaths}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type system:String}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image
                                                                    Height="90"
                                                                    Source="{Binding Converter={StaticResource ImagePathToImageSourceConverter}}"
                                                                    Stretch="Uniform"
                                                                    Tag="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}, Path=DataContext}"
                                                                    ToolTipService.InitialShowDelay="100">
                                                                    <Image.ToolTip>
                                                                        <Image
                                                                            MaxWidth="600"
                                                                            MaxHeight="600"
                                                                            Source="{Binding Converter={StaticResource ImagePathToImageSourceConverter}}"
                                                                            Stretch="Uniform" />
                                                                    </Image.ToolTip>
                                                                </Image>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>

                                                </ItemsControl>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>

                            </Setter.Value>
                        </Setter>

                        <!-- 空状態 -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PromptGroupListViewModel.Items.Count}" Value="0">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Border
                                            Width="300"
                                            Background="#20AAAAAA"
                                            CornerRadius="4">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="0.6">
                                                <TextBlock Text="No Prompt Groups" />
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="10"
                                                    Text="Drop PNG here" />
                                            </StackPanel>
                                        </Border>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="140" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible">
                    <ItemsControl ItemsSource="{Binding PromptGroupListViewModel.SelectedItem.DiffPrompts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffPrompt}">
                                <StackPanel>

                                    <DockPanel>
                                        <CheckBox
                                            Margin="3,0"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            IsChecked="{Binding IsEnabled}">
                                            <CheckBox.LayoutTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterX="0" CenterY="0" ScaleX="1.2" ScaleY="1.25" />
                                                </TransformGroup>
                                            </CheckBox.LayoutTransform>

                                        </CheckBox>

                                        <Border
                                            Margin="5,4"
                                            Padding="2,0"
                                            Background="White"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            DockPanel.Dock="Right">

                                            <TextBox
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="{StaticResource CommonFontSize}"
                                                Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}" />
                                        </Border>
                                    </DockPanel>

                                    <Border
                                        Margin="5,4"
                                        Padding="2,0"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <TextBox
                                            Height="120"
                                            AcceptsReturn="True"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            DockPanel.Dock="Top"
                                            FontSize="{StaticResource CommonFontSize}"
                                            Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}">
                                            <i:Interaction.Behaviors>
                                                <behaviors:EmphasisSyntaxBehavior />
                                            </i:Interaction.Behaviors>
                                        </TextBox>
                                    </Border>
                                    <Button
                                        Margin="0,4,0,8"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.PromptGroupListViewModel.RemoveDiffPromptCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>

                <StackPanel Grid.Row="1">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="200"
                            Height="25"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Command="{Binding CopyResolvedPromptCommand}"
                            CommandParameter="{Binding PromptGroupListViewModel.SelectedItem}"
                            Content="Copy Merged Prompt" />

                        <Button
                            Width="200"
                            Height="25"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Command="{Binding AddDiffPromptCommand}"
                            CommandParameter="{Binding PromptGroupListViewModel.SelectedItem}"
                            Content="Add Item" />
                    </StackPanel>

                    <ListBox
                        Height="100"
                        Background="LightCyan"
                        DockPanel.Dock="Bottom"
                        ItemsSource="{Binding PromptGroupListViewModel.SelectedItem.ImagePaths}">
                        <i:Interaction.Behaviors>
                            <behaviors:ImageListCutPasteBehavior />
                        </i:Interaction.Behaviors>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type system:String}">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Height="90"
                                        Source="{Binding Converter={StaticResource ImagePathToImageSourceConverter}}"
                                        Stretch="Uniform"
                                        Tag="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}, Path=DataContext}"
                                        ToolTipService.InitialShowDelay="100">
                                        <Image.ToolTip>
                                            <Image
                                                MaxWidth="600"
                                                MaxHeight="600"
                                                Source="{Binding Converter={StaticResource ImagePathToImageSourceConverter}}"
                                                Stretch="Uniform" />
                                        </Image.ToolTip>

                                        <Image.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem
                                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ContextMenu}, Path=PlacementTarget.Tag.WriteMetadataToImageCommand}"
                                                    CommandParameter="{Binding}"
                                                    Header="Write metadata" />

                                            </ContextMenu>
                                        </Image.ContextMenu>


                                    </Image>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </Grid>

            <Expander
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,8,0,0"
                FontWeight="SemiBold"
                IsExpanded="true">
                <Expander.Header>
                    <TextBlock Text="Application Logs" />
                </Expander.Header>
                <Border Background="#FAFAFA" Style="{StaticResource SectionBorderStyle}">
                    <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logger.LogEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="2,1">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            Foreground="Gray"
                                            Text="{Binding Timestamp, StringFormat=yyyy/MM/dd HH:mm:ss}" />

                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,8,0"
                                            Text="{Binding Level}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#666" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Level}" Value="WARN">
                                                            <Setter Property="Foreground" Value="Firebrick" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock
                                            Foreground="#333"
                                            Text="{Binding Message}"
                                            TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Expander>

        </Grid>
    </Grid>
</Window>