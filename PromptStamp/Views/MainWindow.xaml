<Window
    x:Class="PromptStamp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:PromptStamp.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PromptStamp.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:PromptStamp.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    d:DesignHeight="480"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#F5F6F8"
    FontSize="{StaticResource CommonFontSize}"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="S"
            Command="{Binding ApplyDiffAllCommand}"
            Modifiers="Control+Shift" />
    </Window.InputBindings>

    <Window.Resources>

        <Thickness x:Key="SectionMargin">0,0,0,12</Thickness>

        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="{StaticResource SectionMargin}" />
        </Style>

        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
        </Style>
    </Window.Resources>

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
                <i:Interaction.Behaviors>
                    <behaviors:PngMetadataDropBehavior />
                </i:Interaction.Behaviors>

                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <Border Style="{StaticResource SectionBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="Common Prompt" />

                                        <Border
                                            Padding="2,0"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="5">

                                            <TextBox
                                                MinHeight="80"
                                                AcceptsReturn="True"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Text="{Binding CommonPrompt}"
                                                TextWrapping="Wrap"
                                                VerticalScrollBarVisibility="Auto" />

                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CommonPrompt}" Value="">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Border Background="#20AAAAAA" CornerRadius="4">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="0.6">
                                                <TextBlock Text="No Prompt" />
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="10"
                                                    Text="Drop PNG here" />
                                            </StackPanel>
                                        </Border>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <Expander
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,8,0,0"
                FontWeight="SemiBold"
                IsExpanded="True">
                <Expander.Header>
                    <TextBlock Margin="3" Text="Diff Prompt" />
                </Expander.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="KeyWord: " />

                        <Border
                            Margin="5,0"
                            Padding="2,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBox
                                Width="250"
                                Background="Transparent"
                                BorderThickness="0"
                                Text="{Binding PendingDiffPrompt.Key}" />
                        </Border>

                    </StackPanel>

                    <Border
                        Margin="5,4"
                        Padding="2,0"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBox
                            Height="120"
                            BorderThickness="0"
                            Text="{Binding PendingDiffPrompt.Prompt}" />
                    </Border>
                    <Button
                        Width="240"
                        Height="25"
                        HorizontalAlignment="Right"
                        Command="{Binding AddDiffPromptAllCommand}"
                        Content="Apply DiffPrompt to All Groups" />
                </StackPanel>
            </Expander>

            <ContentControl Grid.Row="2" Grid.Column="0">
                <i:Interaction.Behaviors>
                    <behaviors:DragDropPngToImagePromptGroupsBehavior />
                </i:Interaction.Behaviors>

                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <!-- 通常 -->
                        <Setter Property="Content">
                            <Setter.Value>
                                <ListBox
                                    x:Name="ImagePromptGroupList"
                                    Width="300"
                                    Padding="4"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding PromptGroupListViewModel.Items}"
                                    SelectedItem="{Binding PromptGroupListViewModel.SelectedItem}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ImagePromptGroup}">
                                            <DataTemplate.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
                                                </Style>
                                            </DataTemplate.Resources>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,4"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding Header}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>

                            </Setter.Value>
                        </Setter>

                        <!-- 空状態 -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PromptGroupListViewModel.Items.Count}" Value="0">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Border
                                            Width="300"
                                            Background="#20AAAAAA"
                                            CornerRadius="4">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="0.6">
                                                <TextBlock Text="No Prompt Groups" />
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="10"
                                                    Text="Drop PNG here" />
                                            </StackPanel>
                                        </Border>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible">
                    <ItemsControl ItemsSource="{Binding PromptGroupListViewModel.SelectedItem.DiffPrompts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffPrompt}">
                                <StackPanel>

                                    <Border
                                        Margin="5,4"
                                        Padding="2,0"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <TextBox
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="{StaticResource CommonFontSize}"
                                            Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}" />
                                    </Border>

                                    <Border
                                        Margin="5,4"
                                        Padding="2,0"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <TextBox
                                            Height="120"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            DockPanel.Dock="Top"
                                            FontSize="{StaticResource CommonFontSize}"
                                            Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}" />
                                    </Border>
                                    <Button
                                        Margin="0,4,0,8"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.PromptGroupListViewModel.RemoveDiffPromptCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>

                <StackPanel Grid.Row="1">
                    <Button
                        Width="200"
                        Height="25"
                        Margin="3"
                        HorizontalAlignment="Right"
                        Command="{Binding AddDiffPromptCommand}"
                        CommandParameter="{Binding PromptGroupListViewModel.SelectedItem}"
                        Content="Add Item" />

                    <ListBox
                        Background="LightCyan"
                        DockPanel.Dock="Bottom"
                        ItemsSource="{Binding PromptGroupListViewModel.SelectedItem.ImagePaths}">
                        <i:Interaction.Behaviors>
                            <behaviors:ImageListCutPasteBehavior />
                        </i:Interaction.Behaviors>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type system:String}">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Height="80"
                                        Source="{Binding Converter={StaticResource ImagePathToImageSourceConverter}}"
                                        Stretch="Uniform" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </Grid>

            <Expander
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,8,0,0"
                FontWeight="SemiBold"
                IsExpanded="False">
                <Expander.Header>
                    <TextBlock Text="Application Logs" />
                </Expander.Header>
                <Border Background="#FAFAFA" Style="{StaticResource SectionBorderStyle}">
                    <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logger.LogEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="2,1">
                                        <TextBlock
                                            Width="140"
                                            Foreground="Gray"
                                            Text="{Binding Timestamp}" />

                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,8,0"
                                            Foreground="#666"
                                            Text="{Binding Level}" />

                                        <TextBlock
                                            Foreground="#333"
                                            Text="{Binding Message}"
                                            TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Expander>

        </Grid>
    </Grid>
</Window>