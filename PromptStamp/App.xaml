<prism:PrismApplication
    x:Class="PromptStamp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PromptStamp.Converters"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>
        <system:Double x:Key="CommonFontSize">16.0</system:Double>
        <system:Double x:Key="CommonCornerRadius">4.0</system:Double>
        <SolidColorBrush x:Key="CommonBackgroundBrush" Color="LightGray" />
        <converters:ImagePathToImageSourceConverter x:Key="ImagePathToImageSourceConverter" />
    </Application.Resources>
</prism:PrismApplication>